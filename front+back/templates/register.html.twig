{% extends 'base.html.twig' %}

{% block body %}

    <form action="{{ path('register') }}" method="POST">
        <div class="registery container ">
            <input name="email" placeholder="email" type="text">
            <input name="name" placeholder="nom" type="text">
            <input name="password" placeholder="pass" type="text">
            <input name="confirm_password" placeholder="confirmation pass" type="text">
            <input type="submit">
    </div>

        {# <div class="g-recaptcha" data-sitekey="{{google_token}}"></div> #}


    {% if errors is defined %}

        {# Ã©quivalent d'un foreach php #}
        {% for error in errors %}
            <p style="color:red;">{{ error }}</p>
        {% endfor %}

    {% endif %}

    {# Si la variable success existe, on l'affiche #}
    {% if success is defined %}
        <p style="color:green;">{{ success }}</p>
    {% endif %}

    </form>

<script src='https://www.google.com/recaptcha/api.js'></script>

{% endblock %}


